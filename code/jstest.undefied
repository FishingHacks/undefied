const WIDTH 300 end
const HEIGHT 30 end
memory canvas WIDTH HEIGHT * end

.param __export__
fn maind in
    WIDTH HEIGHT Canvas::Initialize

    0 1 while
        drop
        dup HEIGHT < if
        
            0 1 while
                drop
                dup WIDTH < if
                    # h w+h*HEIGHT
                    over HEIGHT *
                    over +
                    canvas +ptr
                    1 random cast(bool) if 0xffff00ff else 0xff00ffff end
                    swap !64
                    1 + 1
                else 0 end
            end
            drop drop
        1 + 1
        else 0 end 
    end
    drop drop

    WIDTH HEIGHT canvas Canvas::PutData
end

.param __export__
fn main in
maind
